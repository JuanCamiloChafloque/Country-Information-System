@model IEnumerable<Modelos.Ciudad>

@{
    ViewBag.Title = "Index";
}

<h2>Ciudades</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreCiudad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Departamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Departamento.Pais)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.NombreCiudad)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Departamento.NombreDepartamento)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Departamento.Pais.NombrePais)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>

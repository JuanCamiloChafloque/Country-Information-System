@model Modelos.Pais

@{
    ViewBag.Title = "Details";
}

<h2>Detalles del País</h2>

<div>
    <h4>País</h4>
    <p>
        @Html.ActionLink("Agregar Departamento", "../Departamento/Create", new { id = Model.Id })
    </p>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NombrePais)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombrePais)
        </dd>
    </dl>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Departamentos)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Departamentos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreDepartamento)
                </td>
                <td>
                    @Html.ActionLink("Editar", "../Departamento/Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalles", "../Departamento/Details", new { id = item.Id }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>



</div>
<p>
    @Html.ActionLink("Editar País", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Volver a lista de paises", "Index")
</p>

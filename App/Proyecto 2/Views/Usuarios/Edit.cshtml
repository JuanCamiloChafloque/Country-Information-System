@model Modelos.Usuario

@{
    ViewBag.Title = "Edit";
}

<h2>Editar Usuario</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Usuario</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(Model => Model.Roles, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <ul class="list-group">
                @foreach (var r in ViewBag.CRoles)
                {
                    var check = false;
                    foreach (var r2 in Model.Roles)
                    { 
                        if(r.Id == r2.Id)
                        {
                            check = true;
                            break;
                        }
                    }
                    <li class="list-group-item">
                        <label><input type="checkbox" @(check ? "checked": "") name="CRoles" value="@r.Nombre" />@r.Nombre</label>
                    </li>
                    }
            </ul>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Volver a la lista de usuarios", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
